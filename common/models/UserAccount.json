{
  "name": "UserAccount",
  "base": "User",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "username": {
      "type": "string",
      "required": true
    },
    "firstName": {
      "type": "string",
      "required": true,
      "default": "None"
    },
    "middleName": {
      "type": "string",
      "required": true,
      "default": "None"
    },
    "lastName": {
      "type": "string",
      "required": true,
      "default": "None"
    },
    "phoneNumber": {
      "type": "string",
      "required": true,
      "default": "None"
    },
    "rememberMe": {
      "type": "boolean"
    },
    "status": {
      "type": "string",
      "required": true,
      "default": "ACTIVE"
    },
    "gender": {
      "type": "string",
      "required": "true",
      "default": "None"
    },
    "birthDate": {
      "type": "date",
      "default": "None"
    },
    "educationLevel": {
      "type": "string",
      "required": "true",
      "default": "None"
    },
    "workStatus": {
      "type": "string",
      "required": "true",
      "default": "None"
    },
    "address": {
      "type": "object",
      "required": "true",
      "default": "None"
    },
    "emailVerified": {
      "type": "boolean",
      "default": false
    },
    "userType": {
      "type": "string",
      "required": false,
      "default": "None"
    },
    "isModerator": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "facebookId": {
      "type": "string",
      "required": false
    }
  },
  "validations": [],
  "relations": {
    "role": {
      "type": "belongsTo",
      "model": "Icog-Role",
      "foreignKey": "roleId"
    },
    "university": {
      "type": "belongsTo",
      "model": "university"
    },
    "solveIT-discussions": {
      "type": "hasMany",
      "model": "Solveitdiscussion",
      "foriegnKey": "userAccountId"
    },
    "forums": {
      "type": "hasMany",
      "model": "SolveITForum",
      "foreignKey": "userId",
      "through": "forum_member"
    },
    "favouriteDiscussions": {
      "type": "hasMany",
      "model": "Solveitdiscussion",
      "foreignKey": "userId",
      "through": "Favouritediscussion"
    },
    "projects": {
      "type": "hasMany",
      "model": "Solveitproject",
      "foreignKey": "userId",
      "through": "project-member"
    },
    "blackListed": {
      "type": "hasMany",
      "model": "Solveitdiscussion",
      "foreignKey": "userId",
      "through": "BlackListedDiscussion"
    },
    "progressComments": {
      "type": "hasMany",
      "model": "progressComment",
      "foreignKey": "userId"
    }
  },
  "acls": [
